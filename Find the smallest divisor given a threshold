#include <vector>
#include <algorithm>
using namespace std;

class Solution {
public:
    int smallestDivisor(vector<int>& nums, int threshold) {
        int divisor = 1;
        while (true) {
            int sum = 0;
            for (int i = 0; i < nums.size(); i++) {
                sum += (nums[i] + divisor - 1) / divisor;  // Equivalent to ceil(nums[i] / divisor)
            }
            if (sum <= threshold) {
                return divisor;
            }
            divisor++;
        }
        return -1;
    }
};
